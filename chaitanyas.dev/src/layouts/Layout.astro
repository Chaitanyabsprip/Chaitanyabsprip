---
import '../styles/global.css'
import BackgroundTitle from "../components/BackgroundTitle.astro";
import GithubMark from "../assets/github-mark.svg";
import GithubMarkWhite from "../assets/github-mark-white.svg";

const { header = "", title = "" } = Astro.props as {
header: string;
title?: string;
};
---

<!doctype html>
<html lang="en">

<head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
        <title>{title || header}</title>
</head>

<body class="flex flex-col min-h-screen bg-white dark:bg-surface-950 text-fg-950 dark:text-fg-100">
        {header &&
        <BackgroundTitle text={header} />}
        <main class="flex-1 relative z-1 mx-8 sm:mx-36 mt-12 sm:mt-24 max-w-5xl">
                <slot />
        </main>
        <div id="toast-root"></div>
        <footer class="ml-12 mb-5">
                <a href="https://github.com/chaitanyasharma/chaitanyas.dev" target="_blank" rel="noopener noreferrer"
                        aria-label="View source on GitHub" class="inline-block">
                        <GithubMark class="block dark:hidden w-6 h-6" />
                        <GithubMarkWhite class="hidden dark:block w-6 h-6" />
                </a>
        </footer>
</body>

</html>

