---
const { text } = Astro.props as { text: string };
---

<div
  class="fixed top-[-2.8rem] sm:top-[-9.5rem]
  left-[-0.3rem] sm:left-[-1.2rem]
  pointer-events-none select-none z-0"
>
  <h1
    class="font-bold text-fg-100 dark:text-surface-900/60 text-[7rem] sm:text-[20rem]"
  >
    {text}
  </h1>
</div>
