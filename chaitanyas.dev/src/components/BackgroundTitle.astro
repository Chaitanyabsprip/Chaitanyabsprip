---
const { text } = Astro.props as { text: string };
---

<div class="fixed top-[-2.8rem] sm:top-[-8.4rem] left-[-0.3rem] sm:left-[-1rem] pointer-events-none select-none z-0">
        <h1 class="font-bold text-fg-950/3 dark:text-gray-900/35 text-[7rem] sm:text-[20rem]">
                {text}
        </h1>
</div>
